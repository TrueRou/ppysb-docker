upstream bancho {
	server unix:/socket/bancho.sock fail_timeout=0;
}

server {
	server_name api.dev.sb;
    listen 80;

	location / {
  		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  		proxy_set_header X-Real-IP $remote_addr;
  		proxy_set_header Host $http_host;
  		proxy_redirect off;
  		proxy_pass http://bancho;
  	}
}

server {
	server_name osu.dev.sb;
    listen 80;

	location ~^\/(?:web|api|users|ss|d|p|beatmaps|beatmapsets|community)(?:\/.*|$) {
  		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  		proxy_set_header X-Real-IP $remote_addr;
  		proxy_set_header Host $http_host;
  		proxy_redirect off;
  		proxy_pass http://bancho;
  	}

    # gulag-web
  	location / {
  		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  		proxy_set_header X-Real-IP $remote_addr;
  		proxy_set_header Host $http_host;
  		add_header Cache-Control no-cache;
  		proxy_redirect off;
  		proxy_pass http://app:10000;
  	}
}

server {
    server_name ~^(?:c[e4-6]?)\.dev\.sb$;
    listen 80;

    location /web/ {
  		proxy_set_header Host osu.ppy.sb;
        proxy_redirect      off;
        proxy_set_header    X-Real-IP       $remote_addr;
        proxy_set_header    X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_pass http://bancho;
  	}

  	location / {
  		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  		proxy_set_header X-Real-IP  $remote_addr;
  		proxy_set_header Host $http_host;
  		proxy_redirect off;
  		proxy_pass http://bancho;
  	}
}

